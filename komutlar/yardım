var prefix = ayarlar.prefix;

exports.run = (client, message, params) => {

  if (message.channel.type !== 'dm') {
    const ozelmesajkontrol = new Discord.RichEmbed()
    .setColor(`RANDOM`)
    .setTimestamp()
    .setTitle('ã€KOMUTLARã€ \n\nâ¥ Yetkili KomutlarÄ± Ä°Ã§in   : b-yetkili\n\nâ¥ KullanÄ±cÄ± KomutlarÄ± iÃ§in   : b-kullanÄ±cÄ±')
